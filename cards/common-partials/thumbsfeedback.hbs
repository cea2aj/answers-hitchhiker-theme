{{#if directAnswerClass}}
  {{assign 'className' directAnswerClass}}
  {{assign 'cardType' 'HitchhikerDirectAnswerCard'}}
{{else}}
  {{assign 'className' 'HitchhikerCard'}}
  {{assign 'cardType' 'HitchhikerCard'}}
{{/if}}
<div class="{{@root.className}}-feedbackWrapper">
  <div class="{{@root.className}}-feedbackContent">
    {{#if feedbackSubmitted}}
      <div class="{{@root.className}}-feedbackText">
        {{feedbackTextOnSubmission}}
      </div>
    {{else}}
      {{#if feedbackText}}
        <div class="{{@root.className}}-feedbackText">
          {{feedbackText}}
        </div>
      {{/if}}
      <div class="{{@root.className}}-thumbsWrapper">
        <form class="HitchhikerCard-thumbs js-{{@root.cardType}}-feedbackForm">
          <fieldset class="HitchhikerCard-fieldset">
            <label class="HitchhikerCard-thumb">
              <span class="HitchhikerCard-thumbUpIcon">
                {{> icons/builtInIcon iconName='thumb' }}
              </span>
              <input type="radio"
                name="feedback"
                value="true"
                class="HitchhikerCard-feedback HitchhikerCard-thumbUpButton js-{{@root.cardType}}-thumbInput">
              <span class="sr-only">
                {{positiveFeedbackSrText}}
              </span>
            </label>
            <label class="HitchhikerCard-thumb">
              <span class="HitchhikerCard-thumbDownIcon">
                {{> icons/builtInIcon iconName='thumb' }}
              </span>
              <input type="radio"
                name="feedback"
                value="false"
                class="HitchhikerCard-feedback HitchhikerCard-thumbDownButton js-{{@root.cardType}}-thumbInput">
              <span class="sr-only">
                {{negativeFeedbackSrText}}
              </span>
            </label>
          </fieldset>
          <button type="submit" class="sr-only sr-only-focusable">Send feedback</button>
        </form>
      </div>
    {{/if}}
  </div>
</div>
