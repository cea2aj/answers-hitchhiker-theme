+  constructor(message, stack) {
+    super(message);
+
+    if (stack) {
+      this.stack = stack;
+      this.message = message;
+    } else {
+      Error.captureStackTrace(this, this.constructor);
+    }
+
+    this.name = 'UserError'
+    this.exitCode = 13;
+  }
+}
