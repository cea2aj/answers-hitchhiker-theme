ANSWERS.addComponent('Navigation', Object.assign({{{ json componentSettings.navigation }}}, {
  container: '#standard-navigation-container',
  verticalPages: [
  {{#each global_config.verticalSettings}}
    {
      {{#ifeq ../currentVertical @key }}isActive: true,{{/ifeq}}
      {{#ifeq isFirst 'true'}}isFirst: true,{{/ifeq}}
      {{#ifeq hideInNavigation 'true'}}hideInNavigation: true,{{/ifeq}}
      verticalKey: '{{@key}}',
      url: '{{url}}',
      icon: '{{icon}}',
      label: '{{label}}'
    }{{#unless @last}},{{/unless}}
  {{/each}}
  ]
}));