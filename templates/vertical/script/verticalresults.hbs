ANSWERS.addComponent('VerticalResults', Object.assign({{{ json componentSettings.VerticalResults }}}, {
  container: '#standard-searchresults-container',
  {{#if componentSettings.VerticalResults.verticalKey}}
    verticalKey: '{{verticalKey}}',
  {{else}}
    {{#if currentVertical}}
      verticalKey: '{{currentVertical}}',
    {{/if}}
  {{/if}}
  {{#each verticalsToConfig}}
    {{#ifeq @key ../currentVertical}}
      card: {
        {{#if cardType}}cardType: '{{cardType}}',{{/if}}
        {{#if cardMappings}}cardMappings: {{#with cardMappings}}{{> (lookup . 'mappingTemplate')}}{{/with}}{{/if}}
      }
    {{/ifeq}}
  {{/each}}
}));