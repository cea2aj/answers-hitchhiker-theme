ANSWERS.addComponent('VerticalResults', Object.assign({{{ json componentSettings.VerticalResults }}}, {
  container: '#standard-searchresults-container',
  {{#each global_config.verticalSettings}}
    {{#ifeq @key ../currentVertical}}
      {{#with card}}
        {{#with cardMappings}}{{> (lookup . 'mappingTemplate')}}{{/with}}
        card: {
          cardType: '{{cardType}}',
          cardMappings: {{#with cardMappings}}{{> (lookup . 'mappingTemplate')}}{{/with}}
        }
      {{/with}}
    {{/ifeq}}
  {{/each}}
}));